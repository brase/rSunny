<h1>Listing years</h1>

<table>
  <tr>
    <th>Year</th>
    <th>Sum unit0</th>
    <th>Sum unit1</th>
  </tr>

<% @years.each do |year| %>
  <tr>
    <td><%=h year.year %></td>
    <td><%=h year.sum_unit0 %></td>
    <td><%=h year.sum_unit1 %></td>
    <td><%= link_to 'Show', year %></td>
    <td><%= link_to 'Edit', edit_year_path(year) %></td>
    <td><%= link_to 'Destroy', year, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

