<h1>New month</h1>

<% form_for(@month) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.label :csvData %><br />
    <%= f.text_area :csvData %>
  </p>
  <p>
    <%= f.label :sum_unit0 %><br />
    <%= f.text_field :sum_unit0 %>
  </p>
  <p>
    <%= f.label :sum_unit1 %><br />
    <%= f.text_field :sum_unit1 %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', months_path %>