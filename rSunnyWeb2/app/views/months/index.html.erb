<h1>Listing months</h1>

<table>
  <tr>
    <th>Month</th>
		<th>Year</th>
    
    <th>Sum unit0</th>
    <th>Sum unit1</th>
  </tr>

<% @months.each do |month| %>
  <tr>
    <td><%=h month.month %></td>
		<td><%=h month.year %></td>
    
    <td><%=h month.sum_unit0 %></td>
    <td><%=h month.sum_unit1 %></td>
    <td><%= link_to 'Show', month %></td>
    <td><%= link_to 'Edit', edit_month_path(month) %></td>
    <td><%= link_to 'Destroy', month, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New month', new_month_path %>